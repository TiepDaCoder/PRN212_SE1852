<Window x:Class="RadioButtonControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Height="83" Header="Bạn thấy hệ thống này thế nào?">
                <StackPanel Height="64">
                    <RadioButton GroupName="hethong" x:Name="radRatTot" Content="Rất tốt"/>
                    <RadioButton GroupName="hethong" x:Name="radTot" Content="Tốt"/>
                    <RadioButton GroupName="hethong" x:Name="radTamTam" Content="Tàm tạm"/>
                    <RadioButton GroupName="hethong" x:Name="radKhongOk" Content="Không ok"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Giới tính của bạn là gì?">
                <StackPanel>
                    <RadioButton GroupName="gioitinh" x:Name="radNam" Content="Nam"/>
                    <RadioButton GroupName="gioitinh" x:Name="radNu" Content="Nữ"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Chọn tác vụ:">
                <StackPanel Orientation="Horizontal" >
                    <Button Click="BtnGui_Click" x:Name="btnGui" Content="Gửi phản hồi" Width="100" Margin="10" ></Button>
                    <Button Click="BtnHuy_Click" x:Name="btnHuy" Content="Huỷ" Width="100" Margin="10"></Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>

    </Grid>
</Window>
