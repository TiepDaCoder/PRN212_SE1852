<Window x:Class="ListWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListWPF"
        mc:Ignorable="d"
        Title="Thao tác trên List của Tiệp" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtGiaTri" HorizontalAlignment="Left" Height="23" Margin="17,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98"/>
        <Button x:Name="btnThem" Content="Thêm vào List" HorizontalAlignment="Left" Margin="127,13,0,0" VerticalAlignment="Top" Width="115" Click="BtnThem_Click"/>
        <ListBox x:Name="lstDuLieu" SelectionMode="Multiple" HorizontalAlignment="Left" Height="275" Margin="15,38,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnSapXepTang" Content="Sắp xếp tăng" HorizontalAlignment="Left" Margin="127,143,0,0" VerticalAlignment="Top" Width="115" Click="BtnSapXepTang_Click"/>
        <Button x:Name="btnSapXemGiam" Content="Sắp xếp giảm" HorizontalAlignment="Left" Margin="127,180,0,0" VerticalAlignment="Top" Width="115" Click="BtnSapXepGiam_Click"/>
        <Button x:Name="btnXoa1PhanTu" Content="Xoá 1 phần tử" HorizontalAlignment="Left" Margin="127,217,0,0" VerticalAlignment="Top" Width="115" Click="BtnXoa1PhanTu_Click"/>
        <Button x:Name="btnXoaNhieuPhanTu" Content="Xoá nhiều phần tử" HorizontalAlignment="Left" Margin="127,254,0,0" VerticalAlignment="Top" Width="115" Click="BtnXoaNhieuPhanTu_Click"/>
        <Button x:Name="btnXoaTatCa" Content="Xoá tất cả" HorizontalAlignment="Left" Margin="127,291,0,0" VerticalAlignment="Top" Width="115" Click="BtnXoaToanBoPhanTu_Click"/>
        <Label Content="Giá trị:" HorizontalAlignment="Left" Margin="127,48,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGiaTriChen" HorizontalAlignment="Left" Height="23" Margin="176,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66"/>
        <Label Content="Vị trí:" HorizontalAlignment="Left" Margin="127,73,0,0" />
        <TextBox x:Name="txtViTriChen" HorizontalAlignment="Left" Height="23" Margin="178,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66"/>
        <Button x:Name="btnChen" Content="Chèn" HorizontalAlignment="Left" Margin="176,111,0,0" VerticalAlignment="Top" Width="66" Click="BtnChen_Click"/>
    </Grid>
</Window>
