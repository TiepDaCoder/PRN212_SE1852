<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="Tổng 2 số của SE192961-Phùng Đức Tiệp" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Label Content="Hệ số A:" HorizontalAlignment="Left" Margin="306,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Hệ số B:" HorizontalAlignment="Left" Margin="306,113,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Left" Margin="372,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Left" Margin="372,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="311,153,0,0" TextWrapping="Wrap" Text="Kết quả:" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbKetQua" Background="Yellow" HorizontalAlignment="Left" Margin="372,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnTinh" HorizontalAlignment="Left" Margin="332,197,0,0" VerticalAlignment="Top" Click="TinhTong" Width="55" Height="20">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/8666665_check_icon.png" Width="16" Height="16"/>
                <TextBlock Text="Tính" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnThoat" HorizontalAlignment="Left" Margin="392,197,0,0" VerticalAlignment="Top" Click="Thoat">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/8666595_x_icon.png" Width="16" Height="16"/>
                <TextBlock Text="Thoát" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
