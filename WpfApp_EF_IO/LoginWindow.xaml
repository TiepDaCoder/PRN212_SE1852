<Window x:Class="WpfApp_EF_IO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF_IO"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="350" Width="600">
    <Grid>
        <Label Content="Đăng nhập hệ thống" FontSize="30" HorizontalAlignment="Left" Margin="135,24,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" FontSize="20" HorizontalAlignment="Left" Margin="60,99,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" FontSize="20" HorizontalAlignment="Left" Margin="175,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="37"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Margin="60,151,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" HorizontalAlignment="Left" Margin="175,159,0,0" VerticalAlignment="Top" Width="380"/>
        <CheckBox x:Name="chkSaveInfor" Content="Lưu thông tin đăng nhập" FontSize="15" HorizontalAlignment="Left" Margin="175,200,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" FontSize="20" HorizontalAlignment="Left" Margin="185,233,0,0" VerticalAlignment="Top" Height="31" Width="130" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" FontSize="20" HorizontalAlignment="Left" Margin="390,233,0,0" VerticalAlignment="Top" Height="31" Width="130"/>

    </Grid>
</Window>
